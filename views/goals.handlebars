            <div class="container-fluid dash-nav">
                <a class="navbar-brand" href="#">
                    <h1>Productivity Planner</h1>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText"
                    aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="d-flex">
                    <div class="collapse navbar-collapse" id="navbarText">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href="/dashboard">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="/goals">Goals</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/community">Community</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/logout">Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
        <!--End navbar-->
        <br><br><br>
        <h1 class="m-4 text-center">Goals</h1>
        <h2 class="text-center m-2">Welcome to your Productivity Planner!</h2> 
    
    <br><br><br>
    <h2 class="m-4 text-center">Goals</h2>
    <!--Begin goals container-->
    <div class="container">
            <div class="row">
                <!--Begin the add goal input box-->
                <div class="col-md-12 shadow p-3 m-3 rounded list-border">
                    <h3 class="mb-3">Add a Goal:</h3>
                    <input type="title" class="form-control" placeholder="Add goal here" id="goalTitle"
                        placeholder="Title">
                    <button type="button" class="btn btn-dark mt-3 active" id="addGoal">Submit</button>
                </div>
            </div>
    </div>
    <!--Begin first column: my goals-->
    <div class="container-fluid">
    <div class="row">
        <div class="col shadow p-3 m-3 rounded list-border">
            <h3 class="m-3">My Goals</h3><br>
            <div class="col">
            {{#each goals}}
            {{#if added}}
            <div class="shadow p-3 m-3 rounded bg-white list-border">
                <h4>{{title}}</h4>
                <p><button type="button" class="btn btn-dark prog-btn active" data-id="{{this.id}}" id="startBtn">Start</button> <button type="button" class="btn btn-dark delete-btn active" data-id="{{this.id}}">Delete</button>
                </p>
            </div>
            {{/if}}
            {{else}}
            <h4>Add a Goal to start Tracking!</h4>
            {{/each}}
        </div>
        </div>
        <!--End second column: goals in progress-->
        <div class="col shadow p-3 m-3 rounded list-border">
            <h3 class="m-3">In Progress</h3><br>
            {{#each goals}}
            {{#if inProgress}}
            <div class="shadow p-3 m-3 rounded list-border">
                <p>{{title}}</p>
                <p><button type="button" class="btn btn-dark edit-btn active" data-id="{{this.id}}" id="completeBtn">Completed</button>
                    <button type="button" class="btn btn-dark delete-btn active" data-id="{{this.id}}">Delete</button>
                </p>
            {{/if}}
            {{else}}
            <h4>Start a Goal to track progress!</h4>
            {{/each}}
            </div>
        </div>
        <!--Begin third column: achievements-->
        <div class="col shadow p-3 m-3 rounded list-border">
            <h3 class="m-3">Achievements</h3><br>
            {{#each goals}}
            {{#if completed}}
            <div class="shadow p-3 m-3 rounded">
                <p>{{title}}</p>
                <p><button type="button" class="btn btn-dark prog-btn active" data-id="{{this.id}}" id="inProgressBtn">In Progress</button>
                    <button type="button" class="btn btn-dark delete-btn active" data-id="{{this.id}}">Delete</button>
                </p>
            </div>
            {{/if}}
            {{else}}
            <h4>Complete a Goal to add Achievements!</h4>
            {{/each}}

        </div>
        <!--End of third column: achievements-->
    </div>
    <!--End of row-->
    </div>
    <!--End of container-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="/js/goals.js"></script>
