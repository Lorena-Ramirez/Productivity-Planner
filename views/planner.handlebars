<h2 class="m-4 text-center">Day Planner</h2>
<div class="container">
    <!-- Column 1 -->
    <div class="row">
        <div class="col">
            <div class="shadow p-3 m-3 rounded bg-white">
                <h3>Schedule</h3>
                <div>
                    {{#each timeBlock}}
                    <div class="schedule-container">
                        <p>{{formattedTime}}</p>
                        <textarea class="new-schedule-item" id="schedule-for-{{time}}" data-date="{{date}}"
                            data-time="{{time}}"></textarea>
                    </div>
                    {{/each}}
                    <button type="button" class="btn" id="save-schedule">
                        Save plans!
                    </button>
                </div>
            </div>
        </div>
        <!-- Today's Date -->
        <div class="col-sm ">
            <div class="shadow p-3 m-3 bg-white rounded">
                <div class="row date-row">
                    <h3>Today's Date: </h3>
                    <h3 id="todays-date">{{formattedDate}}</h3>

                </div>
            </div>
            {{!-- Goals --}}
            <div class="shadow p-3 m-3 bg-white rounded">
                <div class="container">
                    <div class="row goals-row">
                        <h3>Goals: </h3><br>
                        <form class="container" id="newGoal">
                            <input type="text" class="form-control goals-input-textarea" id="goalText"
                                placeholder="Write a new goal!">
                            <button type="submit">submit</button>
                        </form>
                        {{#each goals}}
                        <div class="container flexCenter">

                            <input class="form-check-input goals-checkboxes" type="checkbox" {{#if complete}} checked
                                {{/if}} data-completed={{complete}} data-id={{id}}>
                            {{text}}
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            {{!--Water --}}
            <div class="shadow p-3 m-3 bg-white rounded">
                <div class="row water-row">
                    <h3>Water: </h3>
                </div>
            </div>
        </div>

        <!-- Column 3 -->
        <div class="col-sm ">
            {{!-- Notes --}}
            <div class="shadow p-3 m-3 bg-white rounded notes-block">
                <div class="row notes-row">
                    <h3>Notes: </h3>
                    <br>
                    <textarea class="note-textarea" id="new-note" placeholder="Note Text"></textarea>
                    <button class="btn" id="note-save-btn">Save</button>
                </div>
            </div>
            {{!-- Timer --}}
            <div class="shadow p-3 m-3 bg-white rounded">
                <div class="row timer-row">
                    <h3>Productivity Timer: </h3>
                    <div class="container">
                        <div class="timer">
                            <div id="hand"></div>
                            <div class="controls">
                                <label class="switch" for="status-toggle">
                                    <input checked type="checkbox" name="status-toggle" id="status-toggle"
                                        class="productivity" />
                                    <span class="slider"></span>
                                </label>
                                <div class="status">Status: <span id="status">Working</span></div>
                                <div class="time">
                                    <div id="minutes">25</div>
                                    <div id="seconds">00</div>
                                </div>
                                <div class="buttons">
                                    <button aria-label="play" id="play">
                                        <i class="fas fa-play fa-xs" aria-hidden="true"></i>
                                    </button>
                                    <button aria-label="pause" id="pause">
                                        <i class="fas fa-pause fa-xs" aria-hidden="true"></i>
                                    </button>
                                    <button class="productivity" aria-label="stop" id="stop">
                                        <i class="fas fa-stop fa-xs" aria-hidden="true"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="inputs">
                            <div class="col input-group">
                                <label for="work-minutes" class="productivity">Minutes of Work</label>
                                <input type="number" name="work" id="work-minutes" value="25" class="productivity" />
                            </div>
                            <div class="col input-group">
                                <label for="rest-minutes" class="productivity">Minutes of Rest</label>
                                <input type="number" name="rest" id="rest-minutes" value="5" class="productivity" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
